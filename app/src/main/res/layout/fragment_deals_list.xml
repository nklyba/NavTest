<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/page_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Deals list"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/active_op_deal_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Active ftt deal"
        app:layout_constraintBottom_toTopOf="@id/active_fx_deal_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/active_fx_deal_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Active fx deal"
        app:layout_constraintBottom_toTopOf="@id/closed_op_deal_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/closed_op_deal_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Closed ftt deal"
        app:layout_constraintBottom_toTopOf="@id/closed_fx_deal_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/closed_fx_deal_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Closed fx deal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>