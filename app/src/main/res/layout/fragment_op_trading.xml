<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/page_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Trading terminal FTT"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/assets_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Asset"
            app:layout_constraintBottom_toTopOf="@id/profile_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_title_text_view"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            app:layout_constraintBottom_toTopOf="@id/deposit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/deposit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Make Deposit"
            app:layout_constraintBottom_toTopOf="@id/account_picker_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/account_picker_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Account Picker"
            app:layout_constraintBottom_toTopOf="@id/indicators_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/indicators_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Indicators"
            app:layout_constraintBottom_toTopOf="@id/rate_app_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/rate_app_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rate App"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>