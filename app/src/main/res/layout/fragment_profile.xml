<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/page_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Profile"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/promo_video_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Promo Video"
            app:layout_constraintBottom_toTopOf="@+id/traders_way_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_title_text_view"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/traders_way_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Traders Way"
            app:layout_constraintBottom_toTopOf="@id/tasks_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/tasks_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tasks"
            app:layout_constraintBottom_toTopOf="@id/achievements_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/achievements_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Achievements"
            app:layout_constraintBottom_toTopOf="@id/profile_settings_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/profile_settings_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profile settings"
            app:layout_constraintBottom_toTopOf="@id/log_out_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Log out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>